<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.konnekt.Init.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/itoursplash2"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/itourLogo"
                android:layout_width="251dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/imagelogo" />

        <TextView
                android:id="@+id/itourtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="serif-monospace"
                android:gravity="center"

                android:text="@string/Konnekt"
                android:textColor="@color/textColor"
                android:textSize="40sp"
                android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>